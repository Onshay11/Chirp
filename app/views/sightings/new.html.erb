
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Report a Sighting</title>
</head>

<body>
<%= form_for(@sighting) do |f| %>

<div class = "field">
    <%=f.label :UserName %> <br>
    <%=f.text_area :username %>
</div>

<div class = "field">
    <%=f.label :Location %> <br>
    <%=f.text_area :location %>

</div>

<br />
<br />
<br />




<style type='text/css'>
    #info {
        display: block;
        position: absolute;
        left: 0;
        top:105px;
        z-index: 100;
        border: none;
        padding: 10px;
        border-radius: 3px;
        font-size: 12px;
        text-align: left;
        width: 40%;
        color: #222;
        background: #fff;
    }
    
</style>

<div id='map'></div>
<pre id='info'></pre>


<br />

<div class = "field">
    <%=f.label :Behavior %> <br>
    <%=f.text_area :behavior %>
</div>



<div class = "actions">
    <%=f.submit "Submit" %>
</div>

<% end %>

<br/>
<br/>

<br/>





</body>

<%= link_to 'Home', root_path %>
</html>